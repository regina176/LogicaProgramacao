programa
 // Aula 08 - Programa repeticao de palavra - Numeros pares 
{
	
	funcao inicio()
// Contador de numero par
	{
		inteiro contador // Variavel contador

		contador = 2 //1° variavel começa com 2

		enquanto(contador <=20) //verificar o valor
		{
			
			escreva(contador, "\n") //ele vai escrever a palavra pedida

			contador = contador + 2 //1+ 1 ---- contador + 2
			
			//20° volta até chegar no 20
			
			
			
			
			}
	}
}
